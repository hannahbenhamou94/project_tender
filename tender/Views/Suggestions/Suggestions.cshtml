@model List<tender.Models.Tenders>

@{
    ViewBag.Title = "Suggestions";
}


@* Html code for show nav menu here, for mak the application simple
    I will add ngapp and ngcontroller here *@
<div ng-app="appClient">
    <div ng-controller="menuController">
        @* Here first of all we will create a ng-template *@
        <script type="text/ng-template" id="treeMenu">
            <a href="{{menu.Url}}">{{menu.Name}}</a>
            @* We will create submenu only when available *@
            <ul ng-if="(ClientMenu | filter:{ParentId : menu.ID}).length > 0">
                @*<li ng-repeat="menu in ClientMenu | filter:{ParentId : menu.ID}" ng-include="'treeMenu'"></li>*@
                <li ng-repeat="menu in ClientMenu | filter:{ParentId : menu.ID} : true" ng-include="'treeMenu'"></li>
            </ul>
        </script>
        <ul class="main-navigation">
            @* Here we will load only top level menu *@
            @*<li ng-repeat="menu in ClientMenu | filter:{ParentId : 0}" ng-include="'treeMenu'"></li>*@
            <li ng-repeat="menu in ClientMenu | filter:{ParentId : 0} : true" ng-include="'treeMenu'"></li>
            <li style="margin-left:70%.15%"><img src="~/Images/logo1.png" width="100" /></li>
        </ul>
    </div>
</div>
@* Add css here for nav menu *@
<link href="~/css/ClientMenu.css" rel="stylesheet" />

